// Function Returning a Function
var count = 0;

{
  fun makeCounter() {
    fun counter() {
      count = count + 1;
      print count;
    }
    return counter;
  }

  var counter1 = makeCounter();
  counter1(); // Should print 1
  counter1(); // Should print 2

  var count = 0; // This local variable shouldn't affect our counter
  counter1(); // Should print 3
}